<Window x:Class="JX1Launcher.Views.AddAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Add New Account"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Add New Account" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Account Info Section -->
                <GroupBox Header="Account Information" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="Nickname (Display Name):" FontWeight="Bold"/>
                        <TextBox x:Name="TxtNickname" Height="30" Margin="0,5,0,15"
                                 ToolTip="Friendly name to identify this account"/>

                        <Label Content="Username:" FontWeight="Bold"/>
                        <TextBox x:Name="TxtUsername" Height="30" Margin="0,5,0,15"
                                 ToolTip="Game account username"/>

                        <Label Content="Password:" FontWeight="Bold"/>
                        <PasswordBox x:Name="TxtPassword" Height="30" Margin="0,5,0,10"
                                     ToolTip="Game account password (encrypted and stored securely)"/>
                    </StackPanel>
                </GroupBox>

                <!-- Server Selection Section -->
                <GroupBox Header="Server Selection" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="Server Cluster:" FontWeight="Bold"/>
                        <ComboBox x:Name="CmbServerCluster" Height="30" Margin="0,5,0,15"
                                  SelectionChanged="CmbServerCluster_SelectionChanged"
                                  DisplayMemberPath="Name"
                                  ToolTip="Select server cluster/region"/>

                        <Label Content="Server Name:" FontWeight="Bold"/>
                        <ComboBox x:Name="CmbServerName" Height="30" Margin="0,5,0,10"
                                  DisplayMemberPath="Name"
                                  IsEnabled="{Binding ElementName=CmbServerCluster, Path=SelectedItem, Converter={StaticResource NullToBooleanConverter}}"
                                  ToolTip="Select specific server"/>

                        <TextBlock Text="Server will be selected automatically on login"
                                   FontSize="11" Foreground="#888" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Auto-Login Settings Section -->
                <GroupBox Header="Auto-Login Settings" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="ChkAutoLogin" Content="Enable Auto-Login"
                                  IsChecked="True" Margin="0,5"
                                  ToolTip="Automatically login when starting this account"/>

                        <CheckBox x:Name="ChkAutoReconnect" Content="Enable Auto-Reconnect"
                                  IsChecked="True" Margin="0,5"
                                  ToolTip="Automatically reconnect if disconnected from server"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                            <Label Content="Max Reconnect Attempts:" Width="180" VerticalAlignment="Center"/>
                            <TextBox x:Name="TxtMaxReconnect" Width="60" Height="30" Text="3"
                                     ToolTip="Maximum number of reconnection attempts"/>
                        </StackPanel>

                        <Border Background="#2D2D30" Padding="10" Margin="0,10,0,0" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="How Auto-Login Works:" FontWeight="Bold" Foreground="#00FF00" Margin="0,0,0,5"/>
                                <TextBlock TextWrapping="Wrap" Foreground="#CCC" FontSize="11">
                                    • Start the game manually first
                                    <LineBreak/>
                                    • Click "Start" on this account
                                    <LineBreak/>
                                    • The launcher will inject and auto-login via memory
                                    <LineBreak/>
                                    • If disconnected, it will automatically reconnect
                                    <LineBreak/>
                                    • Password is encrypted and stored securely
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- Bot Mode Section (Optional) -->
                <GroupBox Header="Default Bot Mode" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="Bot Mode:" FontWeight="Bold"/>
                        <ComboBox x:Name="CmbBotMode" Height="30" Margin="0,5,0,5" SelectedIndex="0">
                            <ComboBoxItem Content="Disabled (Manual Control)"/>
                            <ComboBoxItem Content="Combat Only"/>
                            <ComboBoxItem Content="Farming Mode"/>
                            <ComboBoxItem Content="Questing Mode"/>
                            <ComboBoxItem Content="Custom"/>
                        </ComboBox>
                        <TextBlock Text="You can change this later for each session"
                                   FontSize="11" Foreground="#888" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="Add Account" Width="120" Height="35"
                    Margin="0,0,10,0" Click="AddButton_Click"
                    IsDefault="True"
                    ToolTip="Add this account to the launcher"/>

            <Button Grid.Column="2" Content="Cancel" Width="100" Height="35"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
