<Window x:Class="JX1Launcher.Views.ConfigErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Memory Configuration Errors"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#252526"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3E3E42"/>
        <SolidColorBrush x:Key="TextBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F48771"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#CCA700"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#89D185"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>

        <!-- Button Style -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0098FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⚠️ Memory Configuration Validation"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource ErrorBrush}"/>
            <TextBlock x:Name="SummaryText"
                       Text="Found errors in memory configuration"
                       FontSize="14"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Stats Panel -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Checked -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Checked"
                               FontSize="12"
                               Foreground="#888888"/>
                    <TextBlock x:Name="TotalCheckedText"
                               Text="0"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                </StackPanel>

                <!-- Errors -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="❌ Errors"
                               FontSize="12"
                               Foreground="#888888"/>
                    <TextBlock x:Name="ErrorsCountText"
                               Text="0"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"/>
                </StackPanel>

                <!-- Warnings -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="⚠️ Warnings"
                               FontSize="12"
                               Foreground="#888888"/>
                    <TextBlock x:Name="WarningsCountText"
                               Text="0"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource WarningBrush}"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Status"
                               FontSize="12"
                               Foreground="#888888"/>
                    <TextBlock x:Name="StatusText"
                               Text="Invalid"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Errors and Warnings List -->
        <TabControl Grid.Row="2"
                    Background="{StaticResource BackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}">

            <!-- Errors Tab -->
            <TabItem Header="Errors" Foreground="{StaticResource TextBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ErrorsList" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource ErrorBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="15"
                                        Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="❌" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Category}"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="{StaticResource ErrorBrush}"/>
                                            <TextBlock Text=" → " Foreground="#888888" Margin="8,0"/>
                                            <TextBlock Text="{Binding Field}"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextBrush}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1"
                                                   Margin="24,0,0,5">
                                            <Run Text="Path: " Foreground="#888888"/>
                                            <Run Text="{Binding Path}" Foreground="{StaticResource AccentBrush}" FontFamily="Consolas"/>
                                        </TextBlock>

                                        <TextBlock Grid.Row="2"
                                                   Margin="24,0,0,5">
                                            <Run Text="Issue: " Foreground="#888888"/>
                                            <Run Text="{Binding Issue}" Foreground="{StaticResource TextBrush}"/>
                                            <Run Text=" (Current: " Foreground="#888888"/>
                                            <Run Text="{Binding CurrentValue}" Foreground="{StaticResource ErrorBrush}" FontFamily="Consolas"/>
                                            <Run Text=")" Foreground="#888888"/>
                                        </TextBlock>

                                        <TextBlock Grid.Row="3"
                                                   Margin="24,0,0,0">
                                            <Run Text="💡 " Foreground="{StaticResource SuccessBrush}"/>
                                            <Run Text="{Binding Suggestion}" Foreground="{StaticResource SuccessBrush}" FontStyle="Italic"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!-- Warnings Tab -->
            <TabItem Header="Warnings" Foreground="{StaticResource TextBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="WarningsList" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource WarningBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="15"
                                        Margin="0,0,0,10">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Category}"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource WarningBrush}"/>
                                            <TextBlock Text=" → " Foreground="#888888" Margin="8,0"/>
                                            <TextBlock Text="{Binding Field}"
                                                       Foreground="{StaticResource TextBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Message}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   Margin="24,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Help Text -->
        <Border Grid.Row="3"
                Background="#2D2D30"
                BorderBrush="{StaticResource AccentBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="15"
                Margin="0,20,0,20">
            <StackPanel>
                <TextBlock Text="📚 How to Fix:"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{StaticResource AccentBrush}"
                           Margin="0,0,0,10"/>
                <TextBlock TextWrapping="Wrap"
                           Foreground="{StaticResource TextBrush}"
                           LineHeight="20">
                    <Run Text="1. Open JX1 game and load your character"/>
                    <LineBreak/>
                    <Run Text="2. Use Cheat Engine to find correct memory addresses and offsets"/>
                    <LineBreak/>
                    <Run Text="3. Update config/memory_config.json with the correct values"/>
                    <LineBreak/>
                    <Run Text="4. Set 'verified: true' for each address you've confirmed"/>
                    <LineBreak/>
                    <Run Text="5. Restart the launcher and try injecting again"/>
                    <LineBreak/><LineBreak/>
                    <Run Text="💡 Tip: See docs/03-reverse-engineering/CHEAT_ENGINE_GUIDE.md for detailed instructions"
                         Foreground="{StaticResource AccentBrush}"
                         FontStyle="Italic"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Open Config File"
                    Style="{StaticResource DarkButtonStyle}"
                    Click="OpenConfigFile_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Retry Validation"
                    Style="{StaticResource DarkButtonStyle}"
                    Click="RetryValidation_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Continue Anyway (Not Recommended)"
                    Style="{StaticResource DarkButtonStyle}"
                    Background="#666666"
                    Click="ContinueAnyway_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Close"
                    Style="{StaticResource DarkButtonStyle}"
                    Background="#D16969"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
